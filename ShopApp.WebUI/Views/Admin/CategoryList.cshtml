@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}
    <style>
        .bg-gradient-primary {
            background-color: #808080;
            background-image: linear-gradient(180deg,#808080 10%,#ffffff 100%);
            border-radius: 10px;
        }

        .category-text {
            color: black;
        }
    </style>
    <body class="bg-gradient-primary">
        <h1>Admin Categories</h1>
        <hr />
        @if (Model.Categories.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width:30px;">Id</td>
                        <td style="width:100px;">Name</td>

                        <td style="width:150px;"></td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.Id</td>

                            <td>@item.Name</td>

                            <td>
                                <a class="btn btn-primary btn-sm mr-2" href="/admin/editcategory/@item.Id">Edit</a>
                                <form action="/admin/deletecategory" method="post" style="display:inline;">
                                    <input type="hidden" name="categoryId" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm ">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <h4>No Products!</h4>
            </div>
        }
    </body>