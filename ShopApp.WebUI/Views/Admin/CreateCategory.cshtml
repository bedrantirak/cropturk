@model CategoryModel
@{
    ViewData["Title"] = "EditCategory";
}
<style>
    .bg-gradient-primary {
        background-color: #808080;
        background-image: linear-gradient(180deg,#808080 10%,#ffffff 100%);
        border-radius: 10px;
    }

    .category-text {
        color: black;
    }
</style>
<body class="bg-gradient-primary">

    <h1>Create Category</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="CreateCategory" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" value="" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-primary">Save Category</button>
                    </div>
                </div>

            </form>
        </div>

    </div>

    </body>
